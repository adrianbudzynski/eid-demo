<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Select document type" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/document_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/button_videoid_substantial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start VideoId" />

    <Button
        android:id="@+id/button_videoid_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start VideoScan" />

    <Button
        android:id="@+id/button_smileid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start SmileID" />

    <Button
        android:id="@+id/button_certid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start CertID" />

</LinearLayout>